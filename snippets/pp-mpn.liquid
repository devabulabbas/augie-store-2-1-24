
{%- if product.metafields.custom.mpn == "-" or product.metafields.custom.mpn == blank -%}
  {% if product.selected_or_first_available_variant.metafields.custom.mpn != blank %}
    <li>
    {% assign machine = product.selected_or_first_available_variant.metafields.custom.mpn %}
    <div class="variant-custom-fields-wrapper" style='display: inline-block;'>
      {%- for variant in product.variants -%}
        
      <div class="variant-custom-fields" data-variant-id="{{ variant.id }}" style="{% if product.selected_or_first_available_variant.id == variant.id %}display:block;{% else %}display:none;{% endif %}">
    <!--     <div class="variant__title"><h3> {{ variant.title }}<strong> Model</strong></h3></div> -->
        <div class="variant__cf" >
          <span data-tooltip="Click for more information" data-micromodal-trigger="modal-factorynew">
            <strong>MPN: </strong><span class='' >{{ variant.metafields.custom.mpn }}</span>{% render 'info-icon' %}
          </span>
        </div>
      </div>
      {%- endfor -%}
    </div>
    </li>
  {% endif %}
{%- endif -%}
{% comment %}
    {%- else -%}
    {% if product.metafields.custom.variant_condition contains 'Factory New' %}
    <span class='' data-tooltip="Click for more information" data-micromodal-trigger="modal-factorynew">Factory New</span>
    {% endif %}
    {% if product.metafields.custom.variant_condition contains 'Certified' %}
    <span class='' data-tooltip="Click for more information" data-micromodal-trigger="modal-refurbished">Certified Refurbished</span>
    {% endif %}
    {% endcomment %}